{
  "name": "nodejs-calculator-api",
  "version": "1.0.0",
  "description": "A simple Node.js calculator API with automated Jest testing and CI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --runInBand --verbose",
    "test:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit"
  },
  "keywords": ["calculator", "api", "nodejs", "jest", "express"],
  "author": "Your Name",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^28.1.3",
    "supertest": "^7.1.4",
    "jest-junit": "^13.0.0"
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "junit.xml"
  }
}
